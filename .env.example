# API Keys
TOMTOM_API_KEY=your_tomtom_api_key_here
OPENALPR_SECRET_KEY=your_openalpr_secret_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
CLEARBIT_API_KEY=your_clearbit_api_key_here
PEOPLE_DATA_LABS_API_KEY=your_people_data_labs_api_key_here
DATATIER_API_KEY=your_datatier_api_key_here
BEEN_VERIFIED_API_KEY=your_been_verified_api_key_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=accident-detection-data
AWS_KMS_KEY_ID=your_kms_key_id

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
REDIS_URL=redis://localhost:6379
POSTGRES_URI=postgresql://airflow:airflow@localhost:5432/airflow

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_ACCIDENTS_RAW=accidents-raw
KAFKA_TOPIC_ACCIDENTS_PROCESSED=accidents-processed
KAFKA_TOPIC_PERSON_DATA=person-data
KAFKA_TOPIC_SOCIAL_DATA=social-data

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077
SPARK_APP_NAME=AccidentDetectionSystem

# Proxy Configuration (for web scraping)
PROXY_PROVIDER=brightdata
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password
PROXY_ENDPOINT=your_proxy_endpoint

# Rate Limiting
REQUEST_THROTTLE_SECONDS=120
API_RATE_LIMIT_PER_MINUTE=60

# Data Retention
DATA_RETENTION_DAYS=90
REDIS_TTL_SECONDS=7776000

# Compliance
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
OPT_OUT_WEBHOOK_URL=https://your-domain.com/opt-out

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ENCRYPTION_ENABLED=true
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Application Settings
FLASK_ENV=development
DEBUG=true
PORT=5000
HOST=0.0.0.0

# Deduplication Settings
DEDUPLICATION_RADIUS_MILES=0.1
DEDUPLICATION_TIME_WINDOW_MINUTES=2

# Processing Settings
MICRO_BATCH_DURATION_SECONDS=55
OUTPUT_INTERVAL_SECONDS=60
WINDOW_DURATION_MINUTES=5